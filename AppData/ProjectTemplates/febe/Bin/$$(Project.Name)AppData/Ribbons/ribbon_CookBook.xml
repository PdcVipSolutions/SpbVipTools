<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ribbon-layout version="23.08.2019">
  <basedir id="pdc-external">$$(Project.Name)AppData\pdcVipIcons</basedir>
  <dictionary file="$$(Project.Name)AppData\Ribbons\ribbonHidden_Dictionary.xml" namespace="hidden" />
  <section id="ribbon.section.cookbook" label="CookBook">
    <block>
      <row>
        <cmd 
			cmdstyle="image-and-text-vertical" 
			id="ribbon.cmd.hidden.run-cookbook" 
			label="CookBook" 
			menu-label="CookBook" 
			run="sleeping"
		>
          <icon file="$(pdc-external)\actions\binders-new.ico" />
          <tooltip text="Invoke the CookBook, explaining the Coding rules" />
        </cmd>
      </row>
    </block>
  </section>
</ribbon-layout>