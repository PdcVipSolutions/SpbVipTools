<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ribbon-layout version="23.08.2019">
  <basedir id="pdc-external">$$(Project.Name)AppData\pdcVipIcons</basedir>
  <basedir id="fe-icons">$$(Project.Name)AppData\fe_Icons</basedir>
  <dictionary file="$$(Project.Name)AppData\Ribbons\ribbon_Dictionary.xml" namespace="ribbon_general" />
  <section id="ribbon.section.help-about" label="Help About">
    <tooltip text="Change layout of the ribbon, change the Language and Help" />
    <block>
      <row>
        <cmd changeEvent="true" cmdstyle="image-and-text-vertical" enabled="true" id="ribbon.cmd.options" label="Options" run="default" visible="true">
          <icon file="$(fe-icons)\gear_2-512.png" />
          <tooltip text="Edit Application Options" />
        </cmd>
      </row>
      <row>
        <cmd changeEvent="true" cmdstyle="image-and-text-vertical" enabled="true" id="ribbon.cmd.help" label="Help" run="default" visible="true">
          <icon file="$(pdc-external)\_license-cc\actions\help-contents.ico" />
          <tooltip text="Help Regarding this application" />
        </cmd>
      </row>
      <row>
        <cmd changeEvent="true" cmdstyle="image-and-text-vertical" enabled="true" id="ribbon.cmd.about" label="About" run="default" visible="true">
          <icon file="$(pdc-external)\_license-cc\actions\help-about.ico" />
          <tooltip text="About This application" />
        </cmd>
      </row>
    </block>
  </section>
  <section id="ribbon.section.panel" label="Ribbon">
    <tooltip text="Change layout of the ribbon" />
    <block>
      <row>
        <cmd 
			changeEvent="false" 
			cmdstyle="image-and-text-vertical" 
			enabled="true" id="ribbon.cmd.add-ribbon-extension" label="Add Extension" run="add-extension" visible="true">
          <icon file="$(pdc-external)\actions\tools.ico" />
          <tooltip text="Expand Ribbon" />
        </cmd>
      </row>
      <row>
        <cmd changeEvent="false" cmdstyle="image-and-text-vertical" enabled="true" id="ribbon.cmd.design-ribbon" label="Design Ribbon" run="default" visible="true">
          <icon file="$(fe-icons)\if_tools-70px_510859.png" />
          <tooltip text="Design Ribbon layout" />
        </cmd>
      </row>
      <row>
        <cmd changeEvent="false" cmdstyle="image-and-text-vertical" enabled="true" id="ribbon.cmd.restore-ribbon-layout" label="Restore" run="default" visible="true">
          <icon file="$(pdc-external)\actions\view-refresh.ico" />
          <tooltip text="Restore Ribbon Layout" />
        </cmd>
      </row>
    </block>
  </section>
</ribbon-layout>